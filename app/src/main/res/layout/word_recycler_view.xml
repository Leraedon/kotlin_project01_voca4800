<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_margin="12dp"
    android:background="@drawable/round_recycler">

    <TextView
        android:id="@+id/word_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLines="1"
        android:text="0001"
        android:textColor="#C5C5C5"
        android:textSize="9sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/word_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="maintain"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/featured_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:srcCompat="@drawable/baseline_star_border_24" />

        <!--<CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CheckBox"
            android:background="@drawable/baseline_star_border_24"/>-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="11"
        android:orientation="vertical">

        <TextView
            android:id="@+id/word_def"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="16dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#242424"
                app:srcCompat="@drawable/baseline_drag_handle_24" />

            <TextView
                android:id="@+id/word_syn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="16dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#242424"
                app:srcCompat="@drawable/baseline_compare_arrows_24" />

            <TextView
                android:id="@+id/word_ant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="TextView" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>